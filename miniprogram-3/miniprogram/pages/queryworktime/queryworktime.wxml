<!--miniprogram/pages/queryworktime/queryworktime.wxml-->
<view class="page">
  <view class="uploader">
    <view class="prompt">您的名字 (Your Name):</view>
    <input class="userinput" value="{{driverName + cnSpaces}}" disabled="true" style="color:grey;"/>
  </view>
  <view class="uploader">
    <view class="prompt">开始日期-年月日 (Start Date-YMD):</view>
    <picker mode="date" value="{{startDate}}" bindchange="changeStartDate">
      <view class="userinput">{{startDate + cnSpaces}}</view>
    </picker>
  </view>
  <view class="uploader">
    <view class="prompt">结束日期-年月日 (Stop Date-YMD):</view>
    <picker mode="date" value="{{stopDate}}" bindchange="changeStopDate">
      <view class="userinput">{{stopDate + cnSpaces}}</view>
    </picker>
  </view>
  <button class="button" bindtap="onQuery">查询(Query)</button>
  <view class="uploader">
    <view class="prompt">查询结果 (Query Result):</view>
    <text wx:if="{{records.length == 0}}" selectable="true">{{cnSpaces}}</text>
    <text class="wtitem" wx:for="{{records}}" wx:key="index" selectable="true">{{item}}</text>
  </view>
  <view class="uploader">
    <view class="prompt">总时间 (Total Time): {{totalTime}}。</view>
  </view>
</view>